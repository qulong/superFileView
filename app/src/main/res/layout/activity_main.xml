<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.silang.superfileview.MainActivity">

    <com.silang.superfileview.MyToolbarView
        android:id="@+id/toolbar_ttt"
        app:toolbar_right_tv="分享"
        app:toolbar_share_visible="false"
        app:toolbar_right_visibility="true"
        app:toolbar_right_tv_color="@color/colorAccent"
        app:toolbar_title_tv="你好"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
